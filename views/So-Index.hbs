          <div class="card-header "><i class="bi bi-geo-alt px-3"></i><strong>Quận {{quanID}}</strong>
            <!-- Dropdown element -->
            <div class="dropdown text-end">
              <button type="button" class="btn btn-outline-primary">
                <a class="dropdown-item" href="/chiTiet?keyword={{quanID}}">Chi Tiết</a>
              </button>
              
              <a id="deleteQuan" href="/xoaQuan?keyword={{quanID}}">
