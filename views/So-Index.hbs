      <button onclick="showInput()" type="button" class="btn btn-outline-success" id="dropdownMenuButton1" aria-expanded="false" method="POST">
        Thêm Quận
      </button>
      <form action="/addQuan" method="POST" id="myForm">
        <div class="mb-3">
          <label for="quanID" class="form-label">Tên Quận</label>
          <input type="text" class="form-control" name="QID" id="quanID" aria-describedby="helpId" placeholder="" required>
        </div>
        <button type="submit" class="btn btn-outline-success ml-auto" >Submit</button>
      </form>
      <style>
        #myForm{
          display:none;
        }
        #myForm button {
          margin-left: 93.5%;
        }
      </style>
      <script>
        function showInput(){
          var input = document.getElementById("myForm");
          input.style.display = "block";
        }
      </script>
