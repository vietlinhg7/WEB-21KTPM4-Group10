<body>
  <main>
    <div class="me-md-2 m-3 mx-1 px-3">
      <button onclick="showInput()" type="button" class="btn btn-outline-success" id="dropdownMenuButton1"
        aria-expanded="false" method="POST">
        Thêm Quận
      </button>
      <form action="/addQuan" method="POST" id="myForm">
        <div class="mt-2 mx-1">
          <label for="quanID" class="form-label">Tên Quận</label>
          <input type="text" class="form-control" name="QID" id="quanID" aria-describedby="helpId" placeholder=""
            required>
        </div>
        <div class="d-flex justify-content-end flex-row mt-2 me-1">
          <button onclick="hideInput()" type="submit" class="btn btn-outline-danger ml-auto me-3">Hủy</button>
          <button type="submit" class="btn btn-outline-success ml-auto">Xác nhận</button>
        </div>
      </form>
      <style>
        #myForm {
          display: none;
        }

        .btn-outline-primary:hover .bi-pencil-square {
          color: white;
        }
      </style>
      <script>
        function showInput() {
          var input = document.getElementById("myForm");
          input.style.display = "block";
        }
        function hideInput() {
          var input = document.getElementById("myForm");
          input.style.display = "none";
        }
      </script>
    </div>
    <form action="/showQuan" method="GET">
      <ul class="list-group card mx-5 fs-3" id="myList">
        {{#each quan}}
        <li class="list-group-item">
          <div class="card-header"><i class="bi bi-geo-alt px-3"></i><strong>Quận {{quanID}}</strong>
            <!-- Dropdown element -->
            <div class="dropdown text-end">
              {{!-- <button type="button" class="btn btn-outline-primary">
                <a class="dropdown-item" href="/chiTiet?keyword={{quanID}}">Chi Tiết</a>
              </button> --}}


              <button type="button" class="btn btn-outline-primary mx-2">
                <a href="/chiTiet?keyword={{quanID}}">
                  <i class="bi bi-pencil-square"></i>
                </a>
              </button>



              <a id="deleteQuan" href="/xoaQuan?keyword={{quanID}}">
                <button type="button" class="btn btn-outline-danger">
                  <i class="bi bi-trash"></i>
                </button>
              </a>
            </div>
          </div>
        </li>
        {{/each}}
      </ul>
    </form>

    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
      integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
      </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
      integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
      </script>
</body>