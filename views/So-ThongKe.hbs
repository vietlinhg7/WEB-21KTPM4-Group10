<body>
    <main>
        <div class="dropdown text-start m-3">
            <!-- Dropdown toggle button -->
            <button class="btn btn-secondary dropdown-toggle bg-primary" type="button" id="dropdownMenuButton1"
                data-bs-toggle="dropdown" aria-expanded="false">
                Báo cáo
            </button>
            <!-- Dropdown menu -->
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                <!-- Dropdown items -->
                <a class="BaoCao dropdown-item" href="report.html">Báo cáo</a>
                <a class="XuLy dropdown-item" href="XuLy.html">Xử Lý</a>

            </div>
        </div>
        <div id="chartContainerReport" style="height: 800px; width: 100%; font-family: Arial;"></div>
        <script src="https://cdn.canvasjs.com/canvasjs.min.js"></script>
        <div class="chart" id="" style="height: 800px; width: 100%; font-family: Arial;"></div>
        <script src="https://cdn.canvasjs.com/canvasjs.min.js"></script>
    </main>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
        integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
        </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
        integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
        </script>

    <script>
        window.onload = function () {

            var chart = new CanvasJS.Chart("chartContainerReport", {
                exportEnabled: true,
                animationEnabled: true,
                title: {
                    text: "Thống kê các báo cáo"
                },
                subtitles: [{
                    text: "Ấn vào chú thích để hiện-ẩn thuộc tính"
                }],
                axisX: {
                    title: "Các quận"
                },
                axisY: {
                    title: "Phàn nàn",
                    titleFontColor: "#4F81BC",
                    lineColor: "#4F81BC",
                    labelFontColor: "#4F81BC",
                    tickColor: "#4F81BC",
                    includeZero: true
                },
                axisY2: {
                    title: "Đóng góp ý kiến",
                    titleFontColor: "#C0504E",
                    lineColor: "#C0504E",
                    labelFontColor: "#C0504E",
                    tickColor: "#C0504E",
                    includeZero: true
                },
                toolTip: {
                    shared: true
                },
                legend: {
                    cursor: "pointer",
                    itemclick: toggleDataSeries
                },
                data: [{
                    type: "column",
                    name: "Phàn nàn",
                    showInLegend: true,
                    yValueFormatString: "#,##0.# Units",
                    dataPoints: [
                        { label: "Quận 1", y: 4 },
                        { label: "Quận 2", y: 6 },
                        { label: "Quận 3", y: 6 },
                        { label: "Quận 4", y: 2 },
                        { label: "Quận 5", y: 4 },
                        { label: "Quận 6", y: 5 },
                        { label: "Quận 7", y: 4 },
                        { label: "Quận 8", y: 8 },
                        { label: "Quận 9", y: 5 },
                        { label: "Quận 10", y: 10 },
                        { label: "Quận 11", y: 12 },
                        { label: "Quận 12", y: 11 }
                    ]
                },
                {
                    type: "column",
                    name: "Đóng góp ý kiến",
                    axisYType: "secondary",
                    showInLegend: true,
                    yValueFormatString: "#,##0.# Units",
                    dataPoints: [
                        { label: "Quận 1", y: 1 },
                        { label: "Quận 2", y: 2 },
                        { label: "Quận 3", y: 6 },
                        { label: "Quận 4", y: 6 },
                        { label: "Quận 5", y: 2 },
                        { label: "Quận 6", y: 7 },
                        { label: "Quận 7", y: 1 },
                        { label: "Quận 8", y: 8 },
                        { label: "Quận 9", y: 9 },
                        { label: "Quận 10", y: 1 },
                        { label: "Quận 11", y: 1 },
                        { label: "Quận 12", y: 4 }
                    ]
                }]
            });
            chart.render();

            function toggleDataSeries(e) {
                if (typeof (e.dataSeries.visible) === "undefined" || e.dataSeries.visible) {
                    e.dataSeries.visible = false;
                } else {
                    e.dataSeries.visible = true;
                }
                e.chart.render();
            }

        }
    </script>



</body>