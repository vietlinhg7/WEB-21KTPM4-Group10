<body>
  <main>
    <form action="/chiTiet" method="GET">
      <div class="card mx-5 fs-3 text-center">
        <div class="card-header "><i class="bi bi-geo-alt px-3"></i><strong>Quận {{quanID}}</strong> </div>
        <div class="card-body px-5">
          <ul class="list-group card mx-5 fs-3" id="myList">
            {{#each phuong}}
            <li class="list-group-item">


              <div class="card-header "><i class="bi bi-geo-alt px-3"></i><strong>Phường {{phuongID}}</strong>
                <!-- Dropdown element -->
              </div>

            </li>
            {{/each}}
          </ul>
        </div>
        <div class="card-footer">
          <!-- Dropdown element -->
          <div class="dropdown text-end">
            <!-- Dropdown toggle button -->
            <button class="btn btn-secondary dropdown-toggle bg-primary" type="button" id="dropdownMenuButton1"
              data-bs-toggle="dropdown" aria-expanded="false">
              Xem thêm
            </button>
            <!-- Dropdown menu -->
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
              <!-- Dropdown items -->
              <a class="dropdown-item" href="/detailAd/Nestle.html ">Chi tiết</a>
              <a class="dropdown-item" href="/update/Netstle.html">Sửa</a>
              <a class="delete dropdown-item" href="#">Xóa</a>
            </div>
          </div>
        </div>
      </div>
    </form>



  </main>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
    integrity="sha384-oBqDVmMz9ATKxIep9tiCxS/Z9fNfEXiDAYTujMAeBAsjFuCZSmKbSSUnQlmh/jp3" crossorigin="anonymous">
    </script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.min.js"
    integrity="sha384-7VPbUDkoPSGFnVtYi0QogXtr74QeVeeIs99Qfg5YCF+TidwNdjvaKZX19NZ/e6oz" crossorigin="anonymous">
    </script>

  <script>
    document.querySelectorAll('.delete').forEach(item => {
      item.onclick = () => {
        if (confirm('Do really want to remove this item?')) {
          item.parentElement.parentElement.parentElement.parentElement.remove();
        }
      }
    })
  </script>
</body>