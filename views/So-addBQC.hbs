<body style=" margin-top: 60px;">

  <form action="addBQC?keyword={{location.locationID}}" method="post" class="form ">
    <div class="container py-3">
      <div class="card">
        <div class="card-header text-center">
          <h1>
          </h1>
        </div>
        <div class="card-body">
          <div class="row">
            <div class="col align-self-center">
              <img src='{{billboard.hinhanh}}' alt="" class="img-thumbnail" id="image">
              <label for="url-input">Enter image URL</label>
              <input name="imgurl" type="text" class="form-control" id="url-input" />
            </div>

            <div class="col-md-5">
              
              <h4 class="card-header"><i class="bi bi-geo-alt-fill"></i><strong> Thông tin </strong> </h4>

              <div class="mb-3">
                <input type="text" class="form-control my-3" name="size" id="size" aria-describedby="helpId"
                  placeholder="Kích thước" value="{{billboard.kichthuoc}}" required>
              </div>


              <div class="mb-3">
                <input type="text" class="form-control" name="amount" id="amount"
                  aria-describedby="helpId" placeholder="Số lượng" value="{{billboard.soluong}}" required>
              </div>
              {{!-- Phường --}}
              {{!-- <div class="mb-3">
                <input type="text" class="form-control my-3" name="keyword" id="adress" aria-describedby="helpId"
                  placeholder="Phường" value="Phường {{location.phuongID}}" required>
              </div> --}}



              {{!-- Quận --}}
              <h4 class="card-header"><i class="bi bi-info-square"></i><strong> Loại </strong></h4>
              <div class="mb-3 loai-vi-tri-dropdown d-flex position-relative">
                <button id="lqc"
                  class="btn btn-secondary btn-sm btn-light border border-secondary dropdown-toggle w-sm-auto w-100 overflow-hidden text-truncate"
                  type="button" data-bs-toggle="dropdown" aria-expanded="false">
                  Loại 
                </button>
                <input type="hidden" id="LQC" name="LQC" value="">

                <ul class="dropdown-menu w-100 position-absolute start-0 dropdown-menu-bottom">
                  {{#each loai}}
                  <li><a id="selectLQC{{loai}}" class="dropdown-item overflow-hidden text-truncate" href="#"
                      onclick="selectOption('lqc','{{loai}}')">{{loai}}</a></li>
                  {{/each}}
                </ul>
              </div>
 
              <h4 class="card-header"><i class="bi bi-info-square"></i><strong> Hình thức quảng cáo</strong>
              </h4>
              <div class="mb-3 hinh-thuc-quang-cao-dropdown d-flex position-relative">
                <button id="htqc"
                  class="btn btn-secondary btn-sm btn-light border border-secondary dropdown-toggle w-100" type="button"
                  data-bs-toggle="dropdown" aria-expanded="false">
                  Hình thức quảng cáo
                </button>
                <input type="hidden" id="HTQC" name="HTQC" value="">

                <ul class="dropdown-menu w-100 position-absolute start-0 dropdown-menu-bottom">
                  {{#each hinhthuc}}
                  <li><a id="selectHTQC{{hinhthuc}}" class="dropdown-item" href="#"
                      onclick="selectOption('htqc','{{hinhthuc}}')">{{hinhthuc}}</a></li>
                  {{/each}}

                </ul>
              </div>


              <h4 class="card-header"><i class="bi bi-info-square"></i><strong>Ngày hết hạn</strong></h4>

      <div class="col-md-3">
        <div class="form-floating mb-3">
          <input type="date" id="birthday" name="date" required>
        </div>
      </div>
      <script>
        $(function () {
          $('#datepicker').datepicker();
        });
      </script>
              <div class="d-flex justify-content-end mt-3">
                <input class="btn btn-primary" type="submit" onclick="save()" value="Save">
              </div>

            </div>
          </div>
        </div>
      </div>
    </div>
  </form>
  <script>
  </script>


  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"></script>
  <script>
    document.getElementById('url-input').addEventListener('change', function () {
      var url = this.value;
      document.getElementById('image').src = url;
    });
    function toggleLockScreen() {
      document.body.classList.toggle('locked');
    }
    function selectOption(buttonID, selectedText) {
      let button = document.getElementById(buttonID);
      button.innerHTML = selectedText;
      if (button.id == 'qh')
        document.getElementById('QHCQH').value = selectedText;
      if (button.id == 'htqc')
        document.getElementById('HTQC').value = selectedText;
      if (button.id == 'lqc')
        document.getElementById('LQC').value = selectedText;
      if (button.id == 'phuong')
        document.getElementById('PIDD').value = selectedText;
      if (button.id == 'quan')
        document.getElementById('QIDD').value = selectedText;
      //
      //document.getElementById('HTQC').value = selectedText;
      // document.getElementById('LVT').value = selectedText;
      //document.getElementById('PIDD').value = selectedText;
      // document.getElementById('QIDD').value = selectedText;


    }
  </script>


</body>